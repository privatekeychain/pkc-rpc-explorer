extends layout

block headContent
	title(i18n-content="Search")

block content
	h1(class="h3" i18n-content="Search")
	hr

	div(class="mb-5")
		form(method="post", action="/search", class="form")
			div(class="input-group input-group-lg")
				input(type="text", class="form-control form-control-sm", name="query", i18n-placeholder="blockheighthashtxidaddress", value=(query), style="width: 300px;")
				div(class="input-group-append")
					button(type="submit", class="btn btn-primary" i18n-content="Search") 